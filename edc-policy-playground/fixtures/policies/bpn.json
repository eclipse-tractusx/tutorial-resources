{
  "@context": {},
  "@type": "PolicyDefinitionRequest",
  "@id": "{{POLICY_ID}}",
  "policy": {
    "@type": "Set",
    "@context": "http://www.w3.org/ns/odrl.jsonld",
    "permission": [
      {
        "action": "use",
        "constraint": [
          {
            "leftOperand": {
              "@value": "BusinessPartnerNumber"
            },
            "operator": "eq",
            "rightOperand": "<bpnNumber>"
          }
        ]
      }
    ]
  }
}
