{
  "@context": {
    "tx": "https://w3id.org/tractusx/v0.0.1/ns/"
  },
  "@type": "PolicyDefinitionRequest",
  "@id": "{{POLICY_ID}}",
  "policy": {
    "@type": "Set",
    "@context": "http://www.w3.org/ns/odrl.jsonld",
    "permission": [
      {
        "action": "use",
        "constraint": [
          {
            "leftOperand": "tx:BusinessPartnerGroup",
            "operator": "isPartOf",
            "rightOperand": "<group>"
          }
        ]
      }
    ]
  }
}
